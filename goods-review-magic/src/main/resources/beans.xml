<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:ssh_db.properties</value>
            </list>
        </property>

        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://37.140.195.118:3306/gr_db?useUnicode=true&amp;characterEncoding=utf8" />
        <property name="username" value="root" />
        <property name="password" value="gr123" />
    </bean>


    <!--Specifying dataSource here -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <!--<property name="dataSource" ref="dataSourceLocal"/>-->
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="entityService" class="ru.goodsreview.core.db.entity.EntityService">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>


</beans>